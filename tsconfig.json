/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@Global/*": ["src/app/global/*"],
      "@Guards": ["src/app/core/guards/GuardPages.ts"],
      "@Constants*": ["src/app/global/constants.ts"],
      "@Component/Table": ["src/app/shared/components/custom-table/custom-table.component.ts"],
      "@Services": ["src/app/core/services"],
      "@Component/Home": ["src/app/layout/components/home/home.component.ts"],
      "@Models/Response": ["src/app/core/models/response/response-model.ts"],
      "@Models/Auth": ["src/app/core/models/login"],
      "@Models/Person": ["src/app/core/models/persons"],
      "@Models/Profile": ["src/app/core/models/profiles"],
      "@Models/Store": ["src/app/core/models/stores"],
    },
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
